{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "strict": true,
    "declaration": true,
    "declarationDir": "./dist",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/components/*": ["./src/components/*"],
      "@/icons/*": ["./src/icons/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*", "stories/**/*"]
}
