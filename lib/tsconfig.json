{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./dist",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/components/*": ["./src/components/*"],
      "@/icons/*": ["./src/icons/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "docs", "demo", "tests"]
}
